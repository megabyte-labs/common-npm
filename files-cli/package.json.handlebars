{
  "name": "@{{profile.npmjs_organization}}/{{repository.prefix.github}}{{slug}}",
  "description": "{{description}}",
  "license": "{{license}}",
  "author": "{{author.name}} <{{author.email}}> ({{link.home}})",
  "homepage": "{{link.home}}",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+{{repository.github}}.git"
  },
  "bugs": {
    "email": "{{email.help}}",
    "url": "{{repository.gitlab}}{{repository.location.issues.gitlab}}"
  },
  "version": "0.0.1",
  "scripts": {
    "help": "task --list",
    "preinstall": "npx -y only-allow-pnpm",
    "prepare": "task common:husky",
    "start": "bash .start.sh"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "tslib": "^2.3.1",
    "@nestjs/common": "8.1.2",
    "@nestjs/config": "^1.0.3",
    "@nestjs/core": "8.1.2",
    "@nestjs/event-emitter": "^1.0.0",
    "chalk": "^4.1.2",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cosmiconfig": "^7.0.1",
    "nest-commander": "^2.3.3",
    "shelljs": "^0.8.4",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@megabytelabs/eslint-config": "^1.0.0",
    "@megabytelabs/jest-preset": "^1.0.0",
    "@megabytelabs/prettier-config": "^14.14.14",
    "cz-conventional-changelog": "^3.3.0",
    "@types/node": "^15.0.1",
    "@types/shelljs": "^0.8.9",
    "@types/update-notifier": "^5.1.0",
    "esbuild-node-externals": "^1.3.0",
    "nest-commander-schematics": "^2.0.1",
    "nest-commander-testing": "^2.0.1",
    "remark-man": "^8.0.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=10"
  },
  "eslintConfig": {
    "extends": "@megabytelabs/eslint-config"
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "{{profile_link.opencollective}}/{{profile.opencollective}}"
    },
    {
      "type": "patreon",
      "url": "{{profile_link.patreon}}/{{profile.patreon}}"
    }
  ],
  "keywords": [
    "bin",
    "cli",
    "npm",
    "node",
    "nest",
    "commander",
    "inquirer",
    "manpage",
    "nestjs",
    "standalone",
    "cosmicconfig"
  ],
  "lint-staged": {
    "**/*": [
      "blocklint --wordlist blacklist,slave,whitelist",
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks",
      "destroyed-symlinks"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.(js|jsx|ts)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.sh": [
      "task fix:shell --",
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "**/*.(jpg|png)": [
      "task image:compress --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ],
    "requirements.txt": [
      "requirements-txt-fixer"
    ]
  },
  "prettier": "@megabytelabs/prettier-config",
  "standard-version": {
    "scripts": {
      "prerelease": "git add --all"
    }
  },
  "files": [
    "!**/*.json",
    "!**/*.spec*",
    "!dist/bin",
    "!dist/main.bundled.js",
    "!dist/main.minified.js",
    "bin",
    "dist",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "main": "dist/main.bundled.js",
  "bin": {
    "__pkg_{{ bin_name }}": "bin/cli",
    "{{ bin_name }}": "bin/cli"
  },
  "typings": "dist/main.d.ts",
  "man": "dist/man",
  "jest": {
    "preset": "@megabytelabs/jest-preset",
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "filename": "index.html",
          "logoImgPath": "./.common/assets/logo-icon-square-200x200.png",
          "openReport": true,
          "pageTitle": "Code Coverage Report",
          "publicPath": "./coverage"
        }
      ]
    ]
  },
  "pkg": {
    "compress": "Brotli",
    "outputPath": "dist/bin"
  },
  "nodemonConfig": {
    "exec": "nest build && node --inspect-brk dist/main",
    "ext": "js,jsx,json,ts,tsx,yml",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "watch": [
      ".env",
      "src"
    ]
  }
}
