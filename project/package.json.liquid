{
  "devDependencies": {
    "@types/node": "^16.11.6",
    "esbuild": "^0.12.29",
    "esbuild-node-externals": "^1.3.0",
    "jest-preset-ts": "^1.0.0"
  },
  "files": ["dist", "lib"],
  "jest": {
    "preset": "jest-preset-ts",
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "filename": "index.html",
          "logoImgPath": "./.config/assets/logo-jest-report.png",
          "openReport": true,
          "pageTitle": "Code Coverage Report",
          "publicPath": "./coverage"
        }
      ]
    ]
  },
  "keywords": [],
  "main": "dist/main.js",
  "nodemonConfig": {
    "exec": "tsc -p . && node --inspect-brk dist/main",
    "ext": "js,jsx,json,ts,tsx,yml",
    "ignore": ["src/**/*.spec.ts"],
    "watch": [".env", "src"]
  },
  "typings": "dist/main.d.ts"
}
