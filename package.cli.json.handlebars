{
  "private": "{{ npm_private }}",
  "files": [
    "!**/*.json",
    "!**/*.spec*",
    "bin",
    "build/main",
    "build/module",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "LICENSE",
    "README.md"
  ],
  "main": "build/main/index.js",
  "module": "build/module/index.js",
  "bin": {
    "{{ bin_name }}": "bin/cli"
  },
  "scripts": {
    "build": "task npm:build:all",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "build:watch": "tsc -p tsconfig.json -w",
    "clean": "task common:clean npm:clean",
    "commit": "task common:commit",
    "info": "task --list",
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "task common:husky",
    "prepare-release": "task common:prepare-release",
    "requirements": "task common:requirements",
    "reset": "task common:reset",
    "reset-force": "task common:reset-force",
    "update": "task common:update"
  },
  "typings": "build/main/index.d.ts",
  "man": "./.assets/man",
  "dependencies": {
    "ajv": "^8.6.3",
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "inquirer": "^8.2.0",
    "ora": "^6.0.1",
    "pino": "^7.0.5",
    "pino-pretty": "^7.1.0",
    "tslib": "^2.3.1",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "@ava/typescript": "^2.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/node": "^15.0.1",
    "@types/inquirer": "8.1.3",
    "@types/update-notifier": "^5.1.0",
    "prettier-plugin-organize-imports": "^2.3.2",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "keywords": [
    "bin",
    "cli",
    "npm",
    "node"
  ],
  "publishConfig": {
    "access": "{{ npm_publish_config_access }}"
  },
  "ava": {
    "failFast": true,
    "files": [
      "!diff",
      "!test",
      "!build/module/**",
      "**/*.spec.ts"
    ],
    "ignoredByWatcher": [
      "diff",
      "test"
    ],
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "build/main/"
      }
    }
  },
  "nodemonConfig": {
    "exec": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register/transpile-only ./src/main.ts",
    "ext": "js,jsx,json,ts,yml",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "watch": [
      ".env",
      "src"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
