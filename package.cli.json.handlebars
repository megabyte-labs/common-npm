{
  "private": "{{ npm_private }}",
  "files": [
    "!**/*.json",
    "!**/*.spec*",
    "bin",
    "build/main",
    "build/module",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "LICENSE",
    "README.md"
  ],
  "main": "dist/main.js",
  "bin": {
    "{{ bin_name }}": "bin/cli"
  },
  "scripts": {
    "build": "task npm:build",
    "clean": "task common:clean npm:clean",
    "commit": "task common:commit",
    "info": "task --list",
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "task common:husky",
    "prepare-release": "task common:prepare-release",
    "requirements": "task common:requirements",
    "reset": "task common:reset",
    "reset-force": "task common:reset-force",
    "start": "task npm:start",
    "test": "task npm:test",
    "update": "task common:update"
  },
  "typings": "dist/main.d.ts",
  "man": "dist/man",
  "dependencies": {
    "@nestjs/common": "8.1.2",
    "@nestjs/core": "8.1.2",
    "ajv": "^8.6.3",
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "cosmiconfig": "^7.0.1",
    "inquirer": "^8.2.0",
    "ora": "^6.0.1",
    "pino": "^7.0.5",
    "pino-pretty": "^7.1.0",
    "rxjs": "7.4.0",
    "shelljs": "^0.8.4",
    "tslib": "^2.3.1",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "@types/inquirer": "8.1.3",
    "@types/node": "^15.0.1",
    "@types/shelljs": "^0.8.9",
    "@types/jest": "^27.0.2",
    "@types/update-notifier": "^5.1.0",
    "jest-html-reporters": "^2.1.6",
    "jest-runner-eslint": "^1.0.0",
    "remark-man": "^8.0.0",
    "ts-jest": "27.0.7",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "logoImgPath": "./.common/assets/logo.png",
          "pageTitle": "Code Coverage Report",
          "publicPath": "./coverage",
          "filename": "code-coverage.html",
          "openReport": true
        }
      ]
    ],
    "projects": [
      {
        "displayName": "test"
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "testMatch": [
          "src/**/*.spec.ts"
        ]
      }
    ],
    "watchPlugins": [
      "jest-runner-eslint/watch-fix"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "keywords": [
    "bin",
    "cli",
    "npm",
    "node",
    "nest"
  ],
  "publishConfig": {
    "access": "{{ npm_publish_config_access }}"
  },
  "nodemonConfig": {
    "exec": "nest build && node --inspect-brk dist/main",
    "ext": "js,jsx,json,ts,yml",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "watch": [
      ".env",
      "src"
    ]
  }
}
