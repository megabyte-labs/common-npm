{
  "files": [
    "!**/*.json",
    "!**/*.spec*",
    "!dist/bin",
    "!dist/main.minified.js",
    "bin",
    "dist/main.bundled.js",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "main": "dist/main.bundled.js",
  "dependencies": {
    "@nestjs/common": "8.1.2",
    "@nestjs/config": "^1.0.3",
    "@nestjs/core": "8.1.2",
    "@nestjs/event-emitter": "^1.0.0",
    "chalk": "^4.1.2",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1"
  },
  "devDependencies": {
    "@megabytelabs/jest-preset": "^1.0.0",
    "@types/node": "^15.0.1",
    "@types/jest": "^27.0.2",
    "esbuild-node-externals": "^1.3.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "preset": "@megabytelabs/jest-preset",
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "filename": "index.html",
          "logoImgPath": "./.common/assets/logo-icon-square-200x200.png",
          "openReport": true,
          "pageTitle": "Code Coverage Report",
          "publicPath": "./coverage"
        }
      ]
    ]
  },
  "keywords": [
    "api",
    "app",
    "npm",
    "node",
    "nest",
    "nestjs"
  ],
  "nodemonConfig": {
    "exec": "nest build && node --inspect-brk dist/main",
    "ext": "js,jsx,json,ts,tsx,yml",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "watch": [
      ".env",
      "src"
    ]
  }
}
