{
  "private": false,
  "name": "@megabytelabs/common-npm",
  "version": "0.0.1",
  "description": "Files shared across NPM projects including global common files, doc partials, and shared configs",
  "license": "MIT",
  "author": "Brian Zalewski <brian@megabyte.space> (https://megabyte.space)",
  "homepage": "https://megabyte.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProfessorManhattan/common-npm.git"
  },
  "bugs": {
    "email": "help@megabyte.space",
    "url": "https://gitlab.com/megabyte-labs/common/npm/-/issues"
  },
  "type": "module",
  "scripts": {
    "fix": "task fix",
    "help": "task --list",
    "lint": "task lint",
    "prepare": "task common:husky",
    "start": "bash .config/start.sh",
    "update:tasks": "rm -rf .shared && git clone https://gitlab.com/megabyte-labs/common/shared.git .shared && cp -rT .shared/common/.config .config"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "esbuild": "0.12.29",
    "esbuild-node-externals": "1.3.0",
    "prettier-plugin-package-perfection": "^1.0.5",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@megabytelabs/eslint-config": "^1.0.0",
    "@megabytelabs/jest-preset": "^1.0.0",
    "@megabytelabs/prettier-config": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "handlebars-helpers": "^0.10.0",
    "tslint": "^6.1.3"
  },
  "keywords": [
    "megabytelabs",
    "npm",
    "package",
    "professormanhattan"
  ],
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  },
  "blueprint": {
    "description": "Files shared across NPM projects including global common files, doc partials, and shared configs",
    "group": "common",
    "overview": "This repository houses files that propagate down to NPM projects via CI. Its point is to keep dependencies and configurations up to date and synchronized across all the NPM projects. Individual NPM projects inherit their upstream files by copying over the `common` folder files and then the `common-{{ NPM_PROJECT_TYPE }}` folder. After the individual projects do that, they merge the appropriate JSON into a `variables.json` file and use that as the context to generate any files that match `*.hbs.*` or `*.handlebars`.",
    "name": "Common NPM",
    "repository": {
      "github": "https://github.com/ProfessorManhattan/common-npm",
      "gitlab": "https://gitlab.com/megabyte-labs/common/npm"
    },
    "slug": "common-npm",
    "subgroup": "npm",
    "title": "Upstream Common NPM Files"
  },
  "eslintConfig": {
    "extends": "@megabytelabs/eslint-config",
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": "off"
    }
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/megabytelabs"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ProfessorManhattan"
    }
  ],
  "lint-staged": {
    "**/*": [
      "blocklint --wordlist blacklist,slave,whitelist",
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks",
      "destroyed-symlinks"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.(jpg|png)": [
      "task image:compress --"
    ],
    "**/*.(js|jsx|ts)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.(js|jsx|ts|tsx)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.py": [
      "black",
      "flake8"
    ],
    "**/*.sh": [
      "task fix:shell --",
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "**/*vault.yml": [
      "task ansible:vault:lint:file --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ],
    "requirements.txt": [
      "requirements-txt-fixer"
    ]
  },
  "prettier": "@megabytelabs/prettier-config",
  "standard-version": {
    "scripts": {
      "prerelease": "git add --all"
    }
  }
}
