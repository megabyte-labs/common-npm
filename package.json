{
  "private": false,
  "name": "@megabytelabs/npm-common-files",
  "version": "1.0.0",
  "description": "Includes common files used across Megabyte Labs NPM package repositories",
  "license": "MIT",
  "author": "Brian Zalewski <brian@megabyte.space> (https://megabyte.space)",
  "homepage": "https://megabyte.space",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/megabyte-labs/common/npm.git"
  },
  "bugs": {
    "url": "https://gitlab.com/megabyte-labs/common/npm/-/issues"
  },
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "esbuild": "^0.12.29",
    "esbuild-node-externals": "^1.3.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@megabytelabs/eslint-config": "^1.0.67",
    "@megabytelabs/prettier-config": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  },
  "blueprint": {
    "description": "Includes common files used across Megabyte Labs NPM package repositories",
    "overview": "All of the Megabyte Labs repositories share configuration files and sometimes even application files. When this repository is updated, the changes are propagated down to all of our NPM packages. The system works via GitLab CI and is a great way of ensuring dependencies are up-to-date.",
    "name": "NPM",
    "repository": {
      "github": "https://github.com/ProfessorManhattan/npm-common-files",
      "gitlab": "https://gitlab.com/megabyte-labs/common/npm"
    },
    "slug": "npm",
    "supportedApps": {
      "app": {
        "desc": ""
      },
      "cli": {
        "desc": "Starting point for Node CLI apps using NestJS and nest-commander"
      },
      "library": {
        "desc": "Minimalistic boilerplate for libraries and configuration packages"
      }
    },
    "title": "NPM Common Files"
  },
  "eslintConfig": {
    "extends": "@megabytelabs/eslint-config",
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": "off"
    }
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/megabytelabs"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ProfessorManhattan"
    }
  ],
  "lint-staged": {
    "**/*": [
      "blocklint --wordlist blacklist,slave,whitelist",
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks",
      "destroyed-symlinks"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.(jpg|png)": [
      "task image:compress --"
    ],
    "**/*.(js|jsx|ts)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.py": [
      "black",
      "flake8"
    ],
    "**/*.sh": [
      "task fix:shell --",
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "**/*vault.yml": [
      "task ansible:vault:lint:file --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ],
    "requirements.txt": [
      "requirements-txt-fixer"
    ]
  },
  "prettier": "@megabytelabs/prettier-config",
  "standard-version": {
    "scripts": {
      "prerelease": "git add --all"
    }
  }
}
